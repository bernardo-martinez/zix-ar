<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:AR="nativescript-ar">
  <FlexboxLayout flexDirection="column" width="640" height="1800" backgroundColor="lightgray">
    <AR:AR
        width="640"
        height="500"
        debugLevel="PHYSICS_SHAPES"
        detectPlanes="true"
        showStatistics="false"
        planeOpacity="0.2"
        arLoaded="arLoaded"
        sceneTapped="sceneTapped"/>

    <FlexboxLayout flexDirection="row" width="640" height="100">
      <Button  width="160" height="100" text="Move" tap="onMoveTap" />
      <Button  width="160" height="100" text="Models" tap="openModels" />
    </FlexboxLayout>
  </FlexboxLayout>
</Page>